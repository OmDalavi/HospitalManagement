<%- include("head") -%>

    <h1 class="text-center mt-3 mb-3">All Appointments Today</h1>
    <div style="margin:auto" class="container row text-center d-flex justify-content-center">
        <% for(var i=0;i<appointments.length;i++){ %>
            <% if(appointments[i].status==1){ %>
            <div class="card d-inline-block  m-3 border border-dark text-center col-lg-4 col-md-6"
                style="width: 18rem;border-radius:15px">
                <div class="card-body bold">

                    <h5 class="card-title bold align-left mt-2"><span class="text-danger">Name</span>: <%=
                            appointments[i].name %>
                    </h5>

                    <p class="card-text align-left"><span class="text-danger">Email</span>: <%= appointments[i].email %>
                    </p>
                    <p class="card-text align-left"><span class="text-danger">Date</span>: <%= appointments[i].date %>
                    </p>
                    
                    <p class="card-text align-left"><span class="text-danger">Type</span>: <%= appointments[i].type %>
                    </p>


                    
                        <p class="text-success align-left big-3"> Approved âœ”</p>
                
                </div>
            </div>
            <% } %>
            <% } %>
    </div>

