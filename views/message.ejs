<%- include("head") -%>

    <div class="mt-3 mb-5">
        <% if(typeof message!='undefined'){ %>
            <% if(message==0){ %>
                <div class="alert alert-danger mt-3 bold text-center" role="alert">
                    Wrong OTP. Email Could Not Be Verified.
                </div>  
            <% }else if(message==1){ %>
              <div class="alert alert-info mt-3 bold text-center" role="alert">
                Your Appointment is <span class="text-danger">pending</span> for approval. After getting approved, you will be notified by mail with your time-slot to visit the hospital.
            </div>  
            <% } %>
          <% } %>
    </div>
    

